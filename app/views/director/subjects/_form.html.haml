= simple_form_for @subject, :url => url, :html => { :class => "form-horizontal", :role => "form"} do |f|
  .form-group
    = f.label :name, class: "col-sm-2 control-label"
    = f.input :name, :label => false, wrapper_html: { class: "col-sm-10"}, input_html: { class: "form-control"}
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', :class => "btn btn-default"