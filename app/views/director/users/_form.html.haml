= simple_form_for @user, :url => url, :html => { :class => "form-horizontal", :role => "form"} do |f|
  .form-group
    = f.label :email, class: "col-sm-2 control-label"
    = f.input :email, :label => false, wrapper_html: { class: "col-sm-10"}, input_html: { class: "form-control"}
  .form-group
    = f.label :password, class: "col-sm-2 control-label"
    = f.input :password, :label => false, wrapper_html: { class: "col-sm-10"}, input_html: { class: "form-control"}
  .form-group
    = f.label :roles, class: "col-sm-2 control-label"
    = f.association :roles, :label => false, wrapper_html: { class: "col-sm-10"}, input_html: { class: "s2"}
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', :class => "btn btn-default"