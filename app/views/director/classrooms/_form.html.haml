= simple_form_for @classroom, :url => url, :html => { :class => "form-horizontal", :role => "form"} do |f|
  .form-group
    = f.label :name, class: "col-sm-2 control-label"
    = f.input :name, :label => false, wrapper_html: { class: "col-sm-10"}, input_html: { class: "form-control"}
  .form-group
    = f.label :subjects, class: "col-sm-2 control-label"
    = f.association :subjects, :label => false, wrapper_html: { class: "col-sm-10"}, input_html: { class: "s2"}
  .form-group
    = f.label :teacher, class: "col-sm-2 control-label"
    = f.association :teacher, label_method: :email, collection: User.teachers,   :label => false, wrapper_html: { class: "col-sm-10"}, input_html: { class: "s2"}
  .form-group
    = f.label :users, class: "col-sm-2 control-label"
    = f.association :users, label_method: :email, collection: User.students,   :label => false, wrapper_html: { class: "col-sm-10"}, input_html: { class: "s2"}
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', :class => "btn btn-default"